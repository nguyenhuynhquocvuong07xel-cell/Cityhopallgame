--================ HOP SERVER LOGIC (GI·ªÆ NGUY√äN) =================
local function HopServer()
	Status.Text = "Searching..."
	local servers = {}
	local cursor = ""

	repeat
		local url = "https://games.roblox.com/v1/games/"..PlaceId.."/servers/Public?limit=100&sortOrder=Asc"
		if cursor ~= "" then
			url ..= "&cursor="..cursor
		end

		local data = HttpService:JSONDecode(game:HttpGet(url))
		for _,sv in pairs(data.data) do
			if sv.playing < sv.maxPlayers and sv.id ~= JobId then
				table.insert(servers, sv.id)
			end
		end
		cursor = data.nextPageCursor
	until cursor == nil or #servers > 0

	if #servers > 0 then
		Status.Text = "Teleporting..."
		TeleportService:TeleportToPlaceInstance(
			PlaceId,
			servers[math.random(#servers)]
		)
	else
		Status.Text = "FULL ‚Äì Retrying..."
		task.delay(1.5, HopServer)
	end
end

HopBtn.MouseButton1Click:Connect(HopServer)

--================ AUTO HOP KHI LOAD =================
task.delay(1.5, HopServer)

--================ RIGHT SHIFT TOGGLE =================
local opened = true
UserInputService.InputBegan:Connect(function(input, gpe)
	if gpe then return end
	if input.KeyCode == Enum.KeyCode.RightShift then
		opened = not opened
		TweenService:Create(
			Scale,
			TweenInfo.new(0.25),
			{Scale = opened and 1 or 0}
		):Play()
	end
end)
